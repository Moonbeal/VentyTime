@using VentyTime.Client.Theme
@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject IAuthService AuthService

<MudThemeProvider Theme="CustomTheme.DefaultTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <NavBar />
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="my-16">
            @Body
        </MudContainer>
    </MudMainContent>

    <AuthorizeView Context="authContext">
        <Authorized>
            <!-- Chat Button -->
            <div class="chat-button">
                <MudFab Color="Color.Secondary" 
                        StartIcon="@Icons.Material.Filled.Chat"
                        Size="Size.Large"
                        OnClick="@(() => NavigationManager.NavigateTo("/chat"))" />
            </div>
        </Authorized>
    </AuthorizeView>
</MudLayout>

<style>
    .my-16 {
        margin-top: 1rem;
        margin-bottom: 1rem;
    }

    .chat-button {
        position: fixed;
        bottom: 2rem;
        right: 2rem;
        z-index: 1000;
    }
</style>

@code {
    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
    }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        NavigationManager.NavigateTo("/");
    }
}
